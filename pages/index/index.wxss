/**index.wxss**/
/* 页面根元素样式 */
page {
  height: 100vh;
  background-color: #fff6e5;
}

/* 固定的顶部操作区样式 */
.top-section {
  position: fixed;
  top: 88rpx;
  left: 0;
  right: 0;
  background-color: #fff6e5;
  padding: 20rpx;
  z-index: 100;
  height: auto;
  min-height: 520rpx;
}

/* 输入区域样式 */
.input-section {
  width: 92%;
  margin: 0 auto;
  background: #ffffff;
  padding: 40rpx 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 178, 64, 0.1);
}

/* 独立的历史记录滚动区域样式 */
.history-scroll {
  box-sizing: border-box;
  padding-top: 580rpx;
  height: calc(100vh - 88rpx);
  width: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.history-section {
  padding: 20rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom)); /* 为底部免责声明留出空间 */
}

.history-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 文本输入框样式 */
.text-input {
  width: 100%;
  min-height: 120rpx;
  background: #fff9ec;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

/* 字数统计样式 */
.word-count {
  width: 100%;
  text-align: right;
  font-size: 24rpx;
  color: #ffb240;
  margin: 12rpx 0 24rpx 0;
}

/* 提交按钮样式 */
.submit-btn {
  position: relative;
  width: 85% !important;
  height: 96rpx;
  background: #ffffff;
  color: #07c160;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: 3rpx solid #07c160;
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.1);
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  z-index: 1;
}

/* 按钮文字样式 */
.btn-text {
  display: inline-block;
  text-align: center;
  line-height: 1;
}

/* 禁用状态按钮样式 */
.submit-btn.disabled {
  background: #ffffff;
  border-color: #a8e6c1;
  color: #a8e6c1;
  box-shadow: none;
}

/* 图片展示区域样式 */
.image-section {
  margin-top: 20rpx;
  width: 92%;
  background: #ffffff;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 178, 64, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 生成的图片样式 */
.generated-image {
  width: 100%;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 图片操作按钮区域样式 */
.image-actions {
  margin-top: 32rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

/* 操作按钮样式 */
.action-btn {
  width: 48%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  background: #fff9ec;
  color: #ffb240;
  border-radius: 44rpx;
  border: 2rpx solid #ffe4b3;
  padding: 0;
  font-weight: 500;
  text-align: center;
}

/* 分享按钮特殊样式 */
.action-btn.share {
  background: #ffffff;
  color: #07c160;
  border: 3rpx solid #07c160;
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.1);
}

/* 在文件开头添加导航栏样式 */
.custom-nav {
  width: 100%;
  text-align: center;
}

/* 设置导航栏标题样式 */
.custom-nav .nav-title {
  width: 100% !important;
  text-align: center !important;
  font-size: 36rpx !important;
  font-weight: 500 !important;
}

.disclaimer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.4;
  background-color: rgba(255, 246, 229, 0.95);
  backdrop-filter: blur(5px);
  z-index: 99;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 在现有样式后添加 */

.history-section {
  width: 100%;
  padding: 0 10rpx;
  margin-bottom: 120rpx;
}

.history-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.history-card {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(255, 178, 64, 0.1);
  display: flex;
  flex-direction: column;
  aspect-ratio: 0.8;
  width: 100%;
}

.history-image {
  width: 100%;
  height: 65%;
  object-fit: cover;
  background-color: #f5f5f5;
}

.history-title {
  font-size: 24rpx;
  color: #333;
  padding: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-time {
  font-size: 20rpx;
  color: #999;
  padding: 0 12rpx 12rpx;
}

/* 弹窗样式 */
.history-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.history-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 90%;
  max-height: 90vh;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  overflow-y: auto;
}

.modal-prompt {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.modal-image {
  width: 100%;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-top: 20rpx;
}

.modal-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 16rpx;
}

/* 添加清空历史按钮样式 */
.clear-history {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
}

.clear-history:active {
  opacity: 0.7;
}
