/**index.wxss**/
/* 页面根元素样式 */
page {
  height: 100vh;                /* 设置页面高度为视口高度 */
  display: flex;                /* 使用弹性布局 */
  flex-direction: column;       /* 垂直方向排列 */
  background-color: #fff6e5;    /* 设置温暖的米黄色背景 */
}

/* 可滚动区域样式 */
.scrollarea {
  flex: 1;                      /* 占用剩余空间 */
  overflow-y: hidden;           /* 隐藏垂直滚动条 */
}

/* 内容容器样式 */
.container {
  padding: 40rpx 32rpx;        /* 设置内边距，上下40rpx，左右32rpx */
  min-height: 100vh;           /* 最小高度为视口高度 */
  display: flex;               /* 使用弹性布局 */
  flex-direction: column;      /* 垂直方向排列 */
  align-items: center;         /* 水平居中对齐 */
}

/* 输入区域样式 */
.input-section {
  width: 92%;                  /* 宽度为父容器的92% */
  background: #ffffff;         /* 白色背景 */
  padding: 40rpx 32rpx;       /* 内边距 */
  border-radius: 24rpx;       /* 圆角边框 */
  box-shadow: 0 8rpx 32rpx rgba(255, 178, 64, 0.1);  /* 添加阴影效果 */
  position: relative;         /* 相对定位 */
  display: flex;              /* 弹性布局 */
  flex-direction: column;     /* 垂直排列 */
  align-items: center;        /* 水平居中 */
}

/* 文本输入框样式 */
.text-input {
  width: 100%;               /* 占满容器宽度 */
  min-height: 120rpx;        /* 最小高度 */
  background: #fff9ec;       /* 浅黄色背景 */
  border-radius: 16rpx;      /* 圆角 */
  padding: 24rpx;           /* 内边距 */
  font-size: 30rpx;         /* 字体大小 */
  line-height: 1.6;         /* 行高 */
  color: #333;              /* 文字颜色 */
}

/* 字数统计样式 */
.word-count {
  width: 100%;              /* 占满容器宽度 */
  text-align: right;        /* 文字右对齐 */
  font-size: 24rpx;         /* 字体大小 */
  color: #ffb240;          /* 橙色文字 */
  margin: 12rpx 0 24rpx 0;  /* 上右下左边距 */
}

/* 提交按钮样式 */
.submit-btn {
  width: 85% !important;    /* 按钮宽度 */
  height: 96rpx;           /* 按钮高度 */
  background: #ffffff;      /* 白色背景 */
  color: #07c160;          /* 微信绿色文字 */
  font-size: 32rpx;        /* 字体大小 */
  font-weight: 600;        /* 字体粗细 */
  border-radius: 48rpx;    /* 圆角 */
  border: 3rpx solid #07c160;  /* 绿色边框 */
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.1);  /* 阴影效果 */
  margin: 0;               /* 外边距 */
  display: flex;           /* 弹性布局 */
  align-items: center;     /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  padding: 0;             /* 内边距 */
}

/* 按钮文字样式 */
.btn-text {
  display: inline-block;   /* 行内块级元素 */
  text-align: center;      /* 文字居中 */
  line-height: 1;         /* 行高 */
}

/* 禁用状态按钮样式 */
.submit-btn.disabled {
  background: #ffffff;     /* 白色背景 */
  border-color: #a8e6c1;   /* 浅绿色边框 */
  color: #a8e6c1;         /* 浅绿色文字 */
  box-shadow: none;        /* 移除阴影 */
}

/* 图片展示区域样式 */
.image-section {
  margin-top: 40rpx;       /* 上边距 */
  width: 92%;             /* 宽度 */
  background: #ffffff;     /* 白色背景 */
  padding: 32rpx;         /* 内边距 */
  border-radius: 24rpx;    /* 圆角 */
  box-shadow: 0 8rpx 32rpx rgba(255, 178, 64, 0.1);  /* 阴影 */
  display: flex;           /* 弹性布局 */
  flex-direction: column;  /* 垂直排列 */
  align-items: center;     /* 水平居中 */
}

/* 生成的图片样式 */
.generated-image {
  width: 100%;            /* 宽度占满 */
  border-radius: 16rpx;   /* 圆角 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);  /* 阴影 */
}

/* 图片操作按钮区域样式 */
.image-actions {
  margin-top: 32rpx;      /* 上边距 */
  width: 100%;           /* 宽度占满 */
  display: flex;          /* 弹性布局 */
  justify-content: space-between;  /* 两端对齐 */
}

/* 操作按钮样式 */
.action-btn {
  width: 48%;            /* 宽度 */
  height: 88rpx;         /* 高度 */
  line-height: 88rpx;    /* 行高 */
  font-size: 28rpx;      /* 字体大小 */
  background: #fff9ec;    /* 背景色 */
  color: #ffb240;        /* 文字颜色 */
  border-radius: 44rpx;   /* 圆角 */
  border: 2rpx solid #ffe4b3;  /* 边框 */
  padding: 0;            /* 内边距 */
  font-weight: 500;      /* 字体粗细 */
  text-align: center;     /* 文字居中 */
}

/* 分享按钮特殊样式 */
.action-btn.share {
  background: #ffffff;    /* 白色背景 */
  color: #07c160;        /* 绿色文字 */
  border: 3rpx solid #07c160;  /* 绿色边框 */
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.1);  /* 阴影 */
}

/* 在文件开头添加导航栏样式 */
.custom-nav {
  width: 100%;
  text-align: center;  /* 文字居中 */
}

/* 设置导航栏标题样式 */
.custom-nav .nav-title {
  width: 100% !important;
  text-align: center !important;
  font-size: 36rpx !important;
  font-weight: 500 !important;
}

.disclaimer {
  position: fixed;
  bottom: 20rpx;
  left: 0;
  right: 0;
  padding: 20rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.4;
}
